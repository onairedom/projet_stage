def main():
	size=getNumberFiles()
	for i in range (size):
		path=getFilePath()
		lst=createTab(path)

		print (lst)


## input function
def getNumberFiles():
	nb_files=int(input('Cb de fichier?'))
	return nb_files


def getFilePath():
	path=input('chemin?')
	return path






main()








